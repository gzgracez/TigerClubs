<% include ../header %>
<p><strong>Description: </strong><%= club["description"] %></p>
<p><strong>Advisor: </strong><%= club["Advisor"] %></p>
<p><strong>Leaders: </strong></p>
	<% for(i = 0; i < club["leaders"].length; i++) {%>
		<p><%=club["leaders"][i]%></p>
	<%}%>
<table class="table table-striped table-hover">
<thead>
  <tr>
    <th>Announcement</th>
    <th>Description</th>
    <th>Author</th>
    <th>Date</th>
  </tr>
</thead>
<tbody>
  <% for(var i = 0; i < club["announcements"].length; i++) {%>
    <tr>
        <td>
          <%= club["announcements"][i]["name"] %>
        </td>
        <td>
          <%= club["announcements"][i]["description"] %>
        </td>
        <td>
          <%= club["announcements"][i]["authorID"] %>
        </td>
         <td>
          <%= club["announcements"][i]["postDate"] %>
        </td>

    </tr>
  <% } %>
</tbody>
</table>

<table class="table table-striped table-hover">
<thead>
  <tr>
    <th>Event</th>
    <th>Description</th>
    <th>Author</th>
    <th>Date</th>
  </tr>
</thead>
<tbody>
  <% for(var i = 0; i < club["events"].length; i++) {%>
    <tr>
        <td>
          <%= club["events"][i]["name"] %>
        </td>
        <td>
          <%= club["events"][i]["description"] %>
        </td>
        <td>
          <%= club["events"][i]["authorID"] %>
        </td>
         <td>
          <%= club["events"][i]["postDate"] %>
        </td>

    </tr>
  <% } %>
</tbody>
</table>
<% include ../footer %>