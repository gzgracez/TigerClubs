<% include ../header %>

<div class="container">
  <h1>All Clubs</h1>
  

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Club Name</th>
        <th>Club Description</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i = 0; i < clubs.length; i++) {%>
        <tr>
            <td>
              <%= clubs[i]["clubname"] %>
            </td>
            <td>
              <%= clubs[i]["description"] %>
            </td>
            <td>
              <% if (user["clubs_member"].indexOf(clubs[i]["id"]) > -1){ %>
                <p>Club Member</p>
              <% } else if (user["clubs_leader"].indexOf(clubs[i]["id"]) > -1){ %>
                <p>Club Leader</p>
              <% } else { %>
                <button type="button" class="btn btn-primary">Join</button>
              <% } %>
            </td>
        </tr>
      <% } %>
    </tbody>
  </table>

</div>

<% include ../footer %>