<% include ../header %>

<div class="container">
  <h1>My Clubs</h1>

  <% if((session.user.clubs_leader.length > 0) || (session.user.clubs_member.length > 0)){ %>

    <p>View all available clubs <a href="/allclubs">here</a>.</p>
    <% if(session.user.clubs_leader.length > 0){ %>
      <p>You are currently a leader of the following clubs:</p>
      <% for(var i = 0; i < clubs.length; i++) {%>
        <% if(session.user.clubs_leader.indexOf(clubs[i]["id"]) > -1){ %>
          <li><%= clubs[i]["clubname"] %></li>
        <% } %>
      <% } %>
    <% } %>

    <% if(session.user.clubs_member.length > 0){ %>
      <p>You are currently a member of the following clubs:</p>
      <% for(var i = 0; i < clubs.length; i++) {%>
        <% if(session.user.clubs_member.indexOf(clubs[i]["id"]) > -1){ %>
          <li><%= clubs[i]["clubname"] %></li>
        <% } %>
      <% } %>
    <% } %>

  <% } else { %>

    <p>You are not currently a member of any clubs! Check out all Trinity clubs <a href="/allclubs">here</a>.</p>
  <% } %>
</div>

<% include ../footer %>